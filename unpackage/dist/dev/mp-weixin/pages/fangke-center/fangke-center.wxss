.user-base-msg {
  height: 200px;
  position: relative;
}
.user-base-msg.fangdong {
    background: #65B5F2;
}
.user-base-msg.fangdong .water-group {
      background: -webkit-gradient(linear, left bottom, left top, from(#0A8BED), to(#65B5F2));
      background: -o-linear-gradient(bottom, #0A8BED, #65B5F2);
      background: linear-gradient(to top, #0A8BED, #65B5F2);
}
.user-base-msg.fangdong .turnBtn {
      color: #1B91EE;
}
.user-base-msg.fangke {
    background: #fbe43e;
}
.user-base-msg.fangke .water-group {
      background: -webkit-gradient(linear, left bottom, left top, from(rgba(252, 147, 56, 0.5)), to(rgba(252, 147, 56, 0.2)));
      background: -o-linear-gradient(bottom, rgba(252, 147, 56, 0.5), rgba(252, 147, 56, 0.2));
      background: linear-gradient(to top, rgba(252, 147, 56, 0.5), rgba(252, 147, 56, 0.2));
}
.user-base-msg.fangke .turnBtn {
      color: #FC8D27;
}
.user-base-msg .grid {
    position: absolute;
    z-index: 1;
    width: 100%;
}
.user-base-msg .grid .grid-list {
      height: 200px !important;
}
.user-base-msg .grid .grid-list:nth-child(1) .img {
        width: 150rpx;
        height: 150rpx;
        border-radius: 75px;
        margin: 0 1em;
}
.user-base-msg .grid .grid-list .turnBtn {
        width: 200rpx;
        height: 66rpx;
        text-align: center;
        line-height: 65rpx;
        border-radius: 33px 0 0 33px;
        background: #fff;
}
.user-base-msg .water-group {
    position: absolute;
    bottom: 0;
    height: 110px;
    width: 100%;
    overflow: hidden;
}
.user-base-msg .water-group .water {
    position: absolute;
    width: 200%;
    height: 100%;
    background-size: 50% 100%;
}
.user-base-msg .water-group .water1 {
    bottom: 35px;
    left: -100%;
    opacity: 0.2;
    -webkit-animation: water-right 20s infinite linear;
            animation: water-right 20s infinite linear;
}
.user-base-msg .water-group .water2 {
    bottom: 45px;
    left: 0;
    opacity: 0.3;
    -webkit-animation: water-left 30s infinite linear;
            animation: water-left 30s infinite linear;
}
.user-base-msg .water-group .water3 {
    bottom: 55px;
    left: -100%;
    -webkit-animation: water-right 40s infinite linear;
            animation: water-right 40s infinite linear;
}
@-webkit-keyframes water-right {
0% {
    -webkit-transform: translateX(0) translateZ(0) scaleY(1);
            transform: translateX(0) translateZ(0) scaleY(1);
}
50% {
    -webkit-transform: translateX(25%) translateZ(0) scaleY(0.85);
            transform: translateX(25%) translateZ(0) scaleY(0.85);
}
100% {
    -webkit-transform: translateX(50%) translateZ(0) scaleY(1);
            transform: translateX(50%) translateZ(0) scaleY(1);
}
}
@keyframes water-right {
0% {
    -webkit-transform: translateX(0) translateZ(0) scaleY(1);
            transform: translateX(0) translateZ(0) scaleY(1);
}
50% {
    -webkit-transform: translateX(25%) translateZ(0) scaleY(0.85);
            transform: translateX(25%) translateZ(0) scaleY(0.85);
}
100% {
    -webkit-transform: translateX(50%) translateZ(0) scaleY(1);
            transform: translateX(50%) translateZ(0) scaleY(1);
}
}
@-webkit-keyframes water-left {
from {
    -webkit-transform: translateX(0%);
            transform: translateX(0%);
}
to {
    -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
}
}
@keyframes water-left {
from {
    -webkit-transform: translateX(0%);
            transform: translateX(0%);
}
to {
    -webkit-transform: translateX(-50%);
            transform: translateX(-50%);
}
}
