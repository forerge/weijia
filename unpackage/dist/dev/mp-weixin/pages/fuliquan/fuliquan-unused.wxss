.header {
  width: 90%;
  margin: 0 auto;
}
.header .grid-list {
    height: 100rpx;
}
.header .grid-list .text {
      padding-bottom: 6px;
      border-bottom: 1px solid #fff;
}
.header .grid-list .text.active {
        color: #FC9940;
        border-bottom: 1px solid #FC9940;
}
.contents {
  width: 90%;
  margin: 0 auto;
  display: none;
}
.contents.active {
    display: block;
}
.contents .list {
    height: 160px;
    position: relative;
    margin-bottom: 2em;
}
.contents .list .img {
      width: 100%;
      height: 100%;
}
.contents .list .grid {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      color: #fff;
}
.contents .list .grid .grid-list:first-child {
        height: 20%;
        padding-left: 1.5em;
}
.contents .list .grid .grid-list:not(:first-child) {
        height: 80%;
        padding-right: 1.5em;
}
.contents .list .grid .grid-list:not(:first-child) .title {
          font-size: 2em;
}
.contents .list .grid .grid-list:not(:first-child) .textBorder {
          padding: 3px 1.5em;
          border: 1px solid #fff;
          border-radius: 12px;
}
.grid.give {
  width: 90%;
  margin: 0 auto;
  display: none;
}
.grid.give.active {
    display: block;
}
.grid.give .grid-list {
