}
.tab-list {
  display: none;
}
.tab-list.active {
    display: block;
}
.scroll-left-right {
  white-space: nowrap;
  width: 100%;
}
.scroll-left-right .grid.tuijian-content-list {
    width: calc(100% + (100% / 4));
    margin-top: 15px;
}
