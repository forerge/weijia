.grid.tap .grid-list {
  height: 40px;
}
.grid.tap .grid-list .text {
    color: #9B9B9B;
    font-size: 32rpx;
    padding-bottom: 6px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    border-bottom-color: #fff;
}
.grid.tap .grid-list .text.active {
      color: #333;
