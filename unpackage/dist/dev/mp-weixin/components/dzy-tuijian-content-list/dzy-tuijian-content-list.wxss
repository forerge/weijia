.grid.tuijian-content-list {
  width: 94%;
  margin: 0 auto;
  margin-top: 15px;
}
.grid.tuijian-content-list .grid-list {
    height: auto !important;
    padding: 1em;
    -webkit-box-shadow: 0 2px 5px #ccc;
            box-shadow: 0 2px 5px #ccc;
}
.grid.tuijian-content-list .grid-list .img-navigator {
      display: block;
      width: 35%;
      height: 100%;
}
.grid.tuijian-content-list .grid-list .img-navigator .img {
        height: 100%;
        width: 100%;
        border-radius: 15rpx;
}
.grid.tuijian-content-list .grid-list .description {
      padding-left: 1em;
      width: 65%;
}
.grid.tuijian-content-list .grid-list .description view {
      margin-bottom: 3px;
      overflow: hidden;
      -o-text-overflow: ellipsis;
         text-overflow: ellipsis;
      white-space: nowrap;
}
